<%= turbo_frame_tag 'meetings_section', class:'flex flex-col w-full mt-10' do %>
  <h2 class="text-xl text-white font-bold">Creating new meeting</h2>
  <%= form_with(model: [@project, @meeting], class: "flex flex-col w-full p-5") do |form| %>
    <%= render 'shared/errors', errors: meeting.errors if meeting.errors.any? %>

    <div class="flex gap-1 w-full">
      <div class="flex flex-col mt-5 gap-1 w-4/6">
        <%= form.label :name, class:'font-bold text-white' %>
        <%= form.text_field :name, class:'text-black font-semibold rounded-lg p-2 text-sm w-full' %>
      </div>

      <div class="flex flex-col mt-5 gap-1 w-4/6">
        <%= form.label :meeting_link, class:'font-bold text-white' %>
        <%= form.text_field :meeting_link, class:'text-black font-semibold rounded-lg p-2 text-sm w-full' %>
      </div>
    </div>

    <div class="flex flex-col mt-5 gap-1 w-full">
      <%= form.label :description, class:'font-bold text-white' %>
      <%= form.text_field :description, class:'text-black font-semibold rounded-lg p-2 text-sm w-full' %>
    </div>

    <div class="flex items-center justify-center mt-10">
      <span class="bg-greenBtn rounded-lg">
        <%= form.submit class: 'py-2 px-4 cursor-pointer rounded-lg text-white font-semibold' %>
      </span>
    </div>
  <% end %>
<% end %>
