<%= form_with(model: project, class: "contents") do |form| %>
  <%= render 'shared/errors', errors: project.errors if project.errors.any? %>

  <div class="flex flex-col mt-5 gap-1 w-full">
    <%= form.label :title, class:'font-bold text-white' %>
    <%= form.text_field :title, class:'text-black font-semibold rounded-lg p-2 text-sm w-full' %>
  </div>

  <div class="flex flex-col mt-5 gap-1 w-full">
    <%= form.label :description, class:'font-bold text-white' %>
    <%= form.text_area :description, class:'text-black font-semibold rounded-lg p-2 text-sm w-full h-40' %>
  </div>

  <div class="flex items-center justify-center mt-10">
    <span class="bg-greenBtn rounded-lg">
      <%= form.submit class: 'py-2 px-4 cursor-pointer rounded-lg text-white font-semibold' %>
    </span>
  </div>
<% end %>
